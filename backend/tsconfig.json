{
  "ts-node": {
    "esm": true,
    "typeCheck": true
  },
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node", "cors", "express"],
    "module": "Node16",
    "target": "ES2022",
    "outDir": "./dist",

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "__tests__", "types"]
}
